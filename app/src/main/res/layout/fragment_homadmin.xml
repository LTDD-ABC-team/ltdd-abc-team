<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".homadminFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/textAddJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Tên công việc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textAddCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Tên công ty"
        app:layout_constraintEnd_toEndOf="@+id/textAddJob"
        app:layout_constraintStart_toStartOf="@+id/textAddJob"
        app:layout_constraintTop_toBottomOf="@+id/textAddJob" />

    <EditText
        android:id="@+id/textAddAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Địa chỉ"
        app:layout_constraintEnd_toEndOf="@+id/textAddCompany"
        app:layout_constraintStart_toStartOf="@+id/textAddCompany"
        app:layout_constraintTop_toBottomOf="@+id/textAddCompany" />

    <EditText
        android:id="@+id/textAddSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Mức lương"
        app:layout_constraintEnd_toEndOf="@+id/textAddAddress"
        app:layout_constraintStart_toStartOf="@+id/textAddAddress"
        app:layout_constraintTop_toBottomOf="@+id/textAddAddress" />

    <EditText
        android:id="@+id/textAddDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Thời gian"
        app:layout_constraintEnd_toEndOf="@+id/textAddSalary"
        app:layout_constraintStart_toStartOf="@+id/textAddSalary"
        app:layout_constraintTop_toBottomOf="@+id/textAddSalary" />

    <EditText
        android:id="@+id/textAddUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Đường dẫn"
        app:layout_constraintEnd_toEndOf="@+id/textAddDate"
        app:layout_constraintStart_toStartOf="@+id/textAddDate"
        app:layout_constraintTop_toBottomOf="@+id/textAddDate" />

    <EditText
        android:id="@+id/textAddDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Mô tả công việc"
        app:layout_constraintEnd_toEndOf="@+id/textAddUrl"
        app:layout_constraintStart_toStartOf="@+id/textAddUrl"
        app:layout_constraintTop_toBottomOf="@+id/textAddUrl" />

    <Button
        android:id="@+id/btnSaveJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Lưu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>